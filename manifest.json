{
	"name": "直zon",
	"manifest_version": 3,
	"version": "1.0",
	"description": "Amazon.co.jpの検索ページで販売元をAmazon直販の商品のみに絞ることができます。",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"action": {
		"default_icon": "img/icon_16.png"
	},
	"icons": {
		"16": "img/icon_16.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.amazon.co.jp/*"
			],
			"js": [
				"contentScript.js"
			],
			"css": [
				"style.css"
			],
			"all_frames": true
		}
	],
	"host_permissions": [
		"http://amazon.co.jp/",
		"https://amazon.co.jp/",
		"http://www.amazon.co.jp/",
		"https://www.amazon.co.jp/"
	]
}